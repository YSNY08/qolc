<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#74992e;">
    <a class="navbar-brand" href="/">Qolc</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to user_path(current_user), class: 'nav-link' do %>
              <i class="fas fa-user"></i>
              <%= current_user.name %>
            <% end %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link" data-toggle="dropdown"><i class="fas fa-cog"></i></a>
            <ul class="dropdown-menu dropdown-menu-right">
              <li class="dropdown-item"><%= link_to 'タイムライン', timeline_path %></li>
              <li class="dropdown-item"><%= link_to 'スケジュールを見る', schedule_path %></li>
              <li class="dropdown-item"><%= link_to '自分の評価を見る', evaluate_path %></li>
            </ul>
          </li>
          <li class="nav-item"><%= link_to 'ログアウト', logout_path, method: :delete, class:'nav-link' %></li>
        <% else %>
          <li class="nav-item"><%= link_to 'サインアップ', signup_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>